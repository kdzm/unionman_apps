<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tf_operator_info"
            android:textColor="@color/white"
            android:textSize="30sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/operator_btn1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_normal_entitle_info"
            android:textColor="@color/white"
            android:textSize="24sp" >

            <requestFocus />
        </Button>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
             >
        </TextView>

        <Button
            android:id="@+id/operator_btn2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_ippv_ino"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/operator_txt"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
            >
        </TextView>

        <Button
            android:id="@+id/operator_btn3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_wallet_info"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
             >
        </TextView>

        <Button
            android:id="@+id/operator_btn4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_negative_authorization_info"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
             >
        </TextView>

        <Button
            android:id="@+id/operator_btn5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_eigenvalue"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
             >
        </TextView>

        <Button
            android:id="@+id/operator_btn6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_parent_child_info"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:background="#46a1a1a1"
         >
    </TextView>
</LinearLayout>
</LinearLayout>