<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="@dimen/epg_list_item_LinearLayout"
		android:paddingBottom="@dimen/epg_list_item_LinearLayout"
		>
	
    <TextView
        android:id="@+id/epg_prog_text_view"
        android:layout_width="@dimen/epg_list_item_layout_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/epg_list_item_marginLeft"
        android:gravity="center|left"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="@dimen/epg_list_item_text_size"
        android:textColor="#ffffff"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<TextView
	        android:id="@+id/epg_time_text_view"
	        android:layout_width="@dimen/epg_list_item_layout_width1"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="@dimen/epg_list_item_marginLeft"
	        android:gravity="center|left"
	        android:scrollHorizontally="true"
			android:textColor="@android:color/darker_gray"
	        android:textSize="@dimen/epg_list_item_txet_size" />
		<TextView
	        android:id="@+id/epg_state_text_view"
	        android:layout_width="@dimen/epg_list_item_layout_width1"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="@dimen/epg_list_item_marginLeft1"
	        android:gravity="center|left"
	        android:scrollHorizontally="true"
			android:textColor="@android:color/holo_red_dark"
	        android:textSize="@dimen/epg_list_item_txet_size" />
    </LinearLayout>
</LinearLayout>
