<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="horizontal" >
       
        <TextView
            android:id="@+id/tv_ipp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/buy_ipp_title"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/supplieridtextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/ipp_price_type"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>
        <TextView
            android:id="@+id/tvPriceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPeriod"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >
        <TextView
            android:focusable="false"
            android:id="@+id/inputPeriod"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/input_ippt_period"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>
        <EditText
            android:id="@+id/et_input_period"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:inputType="number"
            android:maxLength="2"
        	android:focusable="true"
            android:selectAllOnFocus="true" >
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >
	<TextView
	            android:focusable="false"	    
        android:id="@+id/pintextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:gravity="right"
        android:text="@string/tf_input_pin"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <EditText
        android:focusable="true"
        android:id="@+id/et_input_pin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:selectAllOnFocus="true" >
    </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <Button
            android:focusable="true"          
            android:id="@+id/btn_dvt_buy_ipp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="@string/tf_buy" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/dvt_program_name_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_program_name"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/dvt_program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/prog_type_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/prog_type"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/prog_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
    </LinearLayout>
    
    
    
     <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dvt_ipp_startime_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_ipp_startime"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/dvt_ipp_startime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dvt_ipp_duration_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_ipp_duration"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/dvt_ipp_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
    </LinearLayout>  
   
    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dvt_ipp_order_price_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_ipp_order_price"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/dvt_ipp_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
    </LinearLayout>  
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         >
         <TextView
            android:id="@+id/ippv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:text="@string/dvt_ippv_help"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

    </LinearLayout>
</LinearLayout>
</LinearLayout>