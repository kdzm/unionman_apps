<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/epg_list_item_LinearLayout"
    android:paddingTop="@dimen/epg_list_item_LinearLayout" >

    <TextView
        android:id="@+id/epg_searching_tip_view"
        android:layout_width="@dimen/epg_list_item_layout_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/epg_list_item_marginLeft"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/epg_list_item_text_size" />
	
    <ProgressBar
        	android:id="@+id/progressBar1"
	        style="?android:attr/progressBarStyle"
	        android:layout_gravity="center_horizontal"
	        android:layout_width="30dp"
	        android:layout_height="30dp" />

</LinearLayout>