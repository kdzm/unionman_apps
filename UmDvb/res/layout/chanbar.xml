<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chanbar_id"
    android:layout_width="@dimen/chanbar_layout_width"
    android:layout_height="@dimen/chanbar_layout_height"
    android:background="@drawable/channel_bar_background"
    android:orientation="horizontal" >

	<LinearLayout
	    android:layout_width="@dimen/chanbar_layout_width"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="@dimen/chanbar_layout_marginLeft"
	    android:orientation="vertical"
	    android:visibility="visible" >
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="@dimen/chanbar_layout_marginTop"
	        android:visibility="visible" >
			<TextView
				android:id="@+id/chanbar_cur_prog"
				android:layout_width="@dimen/chanbar_cur_prog_txexView_width"
				android:layout_height="wrap_content"
                android:singleLine="true"
				android:layout_gravity="center_horizontal"
				android:textSize="@dimen/chanbar_cur_prog_textSize"
				android:textColor="#ffffff" />
			
			<TextView
			    android:id="@+id/chanbar_text_p_name"
			    android:layout_width="@dimen/chanbar_chanbar_text_p_name_width"
			    android:layout_height="wrap_content"
                android:singleLine="true"
			    android:gravity="left|center"
			    android:textSize="@dimen/chanbar_cur_prog_textSize"
			    android:textColor="#ffffff" />
			
			<TextView
			    android:id="@+id/chanbar_text_p_start_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:singleLine="true"
			    android:gravity="left|center"
			    android:textSize="@dimen/chanbar_cur_prog_textSize"
			    android:textColor="#ffffff" />
			
			<TextView
			    android:id="@+id/chanbar_txt_p_end_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:singleLine="true"
			    android:gravity="left|center"
			    android:textSize="@dimen/chanbar_cur_prog_textSize"
	            android:textColor="#ffffff" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="@dimen/chanbar_layout_width"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="@dimen/chanbar_layout_marginTop2"
	        android:visibility="visible" >
	        <TextView
	            android:id="@+id/chanbar_next_prog"
	            android:layout_width="@dimen/chanbar_cur_prog_txexView_width"
	            android:layout_height="wrap_content"
                android:singleLine="true"
	            android:layout_gravity="center_horizontal"
	            android:textSize="@dimen/chanbar_cur_prog_textSize1"/>
	
	        <TextView
	            android:id="@+id/chanbar_text_f_name"
	            android:layout_width="@dimen/chanbar_chanbar_text_p_name_width"
	            android:layout_height="wrap_content"
	            android:gravity="left|center"
                android:singleLine="true"
	            android:textSize="@dimen/chanbar_cur_prog_textSize1"/>
	
	        <TextView
	            android:id="@+id/chanbar_text_f_start_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:singleLine="true"
	            android:gravity="left|center"
	            android:textSize="@dimen/chanbar_cur_prog_textSize1"/>

	        <TextView
	            android:id="@+id/chanbar_txt_f_end_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:singleLine="true"
	            android:gravity="left|center"
	            android:textSize="@dimen/chanbar_cur_prog_textSize1"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>