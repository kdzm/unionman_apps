<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ipp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/supplieridtextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/tf_supplier_id"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/walletIDtextView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/wallet_id"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/productIDtextView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/tf_product_id"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
        <TextView
            android:id="@+id/chargeintervaltextView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/tf_charge_interval"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/unablerecordpricetextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/tf_unable_record_price"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" >

        </TextView>
        <TextView
            android:id="@+id/ablerecordpricetextView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/tf_able_record_price"
            android:textColor="@color/white"
            android:textSize="24sp" >
            

        </TextView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >
	<TextView
        android:id="@+id/pintextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:gravity="right"
        android:text="@string/tf_input_pin"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/et_input_pin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:nextFocusRight="@+id/btn_tf_view"
        android:nextFocusLeft="@+id/btn_tf_cancel"
        android:selectAllOnFocus="true" >
    </EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
         >        <Button            android:id="@+id/btn_tf_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:nextFocusLeft="@id/et_input_pin"
            android:text="@string/tf_view" />
            	 <Button            android:id="@+id/btn_tf_tape"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="50dp"            android:text="@string/tf_tape" />
        <Button
            android:id="@+id/btn_tf_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:nextFocusRight="@+id/et_input_pin"
            android:text="@string/tf_cancel" />    

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
         >
        
         <TextView
            android:id="@+id/ippv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="right"
            android:text="@string/tf_ippv_help"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

    </LinearLayout>
</LinearLayout>
</LinearLayout>