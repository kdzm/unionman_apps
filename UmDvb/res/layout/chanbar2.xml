<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chanbar_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/channel_info"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="934dp"
        android:layout_height="match_parent"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chanbar_prog_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:textColor="#ffffff"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/chanbar_prog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="40sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chanbar_prog_curtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="40sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="@dimen/chanbar_layout_marginTop"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/chanbar_cur_prog"
                    android:layout_width="@dimen/chanbar_cur_prog_txexView_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />

                <TextView
                    android:id="@+id/chanbar_text_p_name"
                    android:layout_width="@dimen/chanbar_chanbar_text_p_name_width"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />

                <TextView
                    android:id="@+id/chanbar_text_p_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />

                <TextView
                    android:id="@+id/chanbar_txt_p_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/chanbar_layout_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/chanbar_layout_marginTop2"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/chanbar_next_prog"
                    android:layout_width="@dimen/chanbar_cur_prog_txexView_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />

                <TextView
                    android:id="@+id/chanbar_text_f_name"
                    android:layout_width="@dimen/chanbar_chanbar_text_p_name_width"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />

                <TextView
                    android:id="@+id/chanbar_text_f_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />

                <TextView
                    android:id="@+id/chanbar_txt_f_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="@dimen/chanbar_cur_prog_textSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="144dp"
        android:layout_height="759dp"
        android:layout_weight="0.41"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:textSize="@dimen/chanbar_cur_prog_textSize" />

            <TextView
                android:id="@+id/vdectype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/chanbar_cur_prog_textSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.33"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/resolution_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:textSize="@dimen/chanbar_cur_prog_textSize" />

            <TextView
                android:id="@+id/vdectype_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/chanbar_cur_prog_textSize" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>