<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layout"
    android:background="@drawable/chinamobile"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_check"
        android:layout_centerInParent="true"
        android:text="@string/check"
        android:textColor="@android:color/white"
        android:textSize="50sp"/>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:paddingTop="300dp"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible">

            <TextView
                android:layout_marginBottom="50dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:text="@string/no_connection"
                android:textColor="@android:color/white"
                android:id="@+id/tv_msg"
                android:textSize="35sp" />


        <LinearLayout
            android:layout_below="@+id/tv_msg"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/bt_recheck"
                style="@style/button"
                android:layout_margin="5dp"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="@dimen/dialog_button_height"
                android:gravity="center"
                android:background="@drawable/btn_color"
                android:text="@string/dialog_recheck_button" />
            <Button
                android:id="@+id/bt_netconfig"
                style="@style/button"
                android:layout_margin="5dp"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="@dimen/dialog_button_height"
                android:gravity="center"
                android:background="@drawable/btn_color"
                android:text="@string/dialog_netconfig_button" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
