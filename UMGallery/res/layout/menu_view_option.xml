<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_option_Item_lay"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
   
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:orientation="horizontal"  
    android:layout_centerVertical="true"
    > 
    <TextView
        android:id="@+id/setting_option_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginLeft="100dp"
        android:textSize="44sp"
       
        android:textColor="@android:color/white" />
</LinearLayout>

<LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"  
       android:layout_alignParentRight="true"
       android:orientation="horizontal"
       android:layout_centerVertical="true"
           >
		     <ImageView
		        android:id="@+id/right_arrow_img"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_gravity="center_vertical"
		        android:background="@drawable/selector_view_right_gred" />
		   
		    <TextView
		        android:id="@+id/setting_option_item_val"
		        android:layout_width="220dp"
		        android:layout_height="100dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="40dp"
        		android:layout_marginRight="40dp"
        	   
		        android:textColor="@color/white"
		        android:gravity="center"
		        android:textSize="44sp" >
		    </TextView>
			<ImageView
		        android:id="@+id/left_arrow_img"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_marginRight="40dp"
		        android:layout_gravity="center_vertical"
		        android:background="@drawable/selector_view_left_gred" />
	

  </LinearLayout>
      
</RelativeLayout>