<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:id="@+id/progess_layout"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/progress_menu_txt"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
           android:layout_gravity="center_vertical"
            android:layout_weight="3.28"
            android:textColor="@color/gred"
            android:textSize="20sp"
            android:gravity="center_vertical|left"
             />

        <SeekBar
            android:id="@+id/progress_seekbar"
            android:layout_width="390dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seek_bar_progress_focus"
            android:thumb="@android:color/transparent"
             />

        <TextView
            android:id="@+id/progress_number_txt"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/gred"
            android:singleLine="true"
            android:maxLength="8"
            android:textSize="20sp"
             />

</LinearLayout>
