<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="@string/wallet_info"
            android:textSize="30sp" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/dvt_operator_name"
                android:textSize="24sp" />

            <TextView
                android:layout_width="174dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/waste"
                android:textSize="24sp" />

            <TextView
                android:layout_width="174dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/cash"
                android:textSize="24sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/mywalletlist"
            android:layout_width="630dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:cacheColorHint="#00000000"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:listSelector="@drawable/searchmenu_btn" />
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/help_wallet_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/choose_back_help"
            android:textColor="@color/white"
            android:textSize="28sp" >
        </TextView>
    </LinearLayout>

  </LinearLayout>