<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_wizard_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="126dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:text="@string/setting_wizard"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="942dp"
        android:layout_height="450dp"
        android:layout_marginLeft="168dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="520dp"
                android:layout_height="370dp"
                android:layout_marginLeft="48dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/finish"
                    android:textColor="@color/black_deep"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_net_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62dp"
                    android:text="@string/back_to_setup"
                    android:textColor="@color/black_deep"
                    android:textSize="40sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="42dp"
            android:gravity="right"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_last_step"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:textColor="@drawable/item_text_color"
                android:background="@drawable/sel_button_selector"
                android:text="@string/last_step" />
            <Button
                android:id="@+id/btn_finsh"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:textColor="@drawable/item_text_color"
                android:background="@drawable/sel_button_selector"
                android:text="@string/finish" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgv_reflection"
        android:layout_width="942dp"
        android:layout_height="100dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="168dp"
        android:contentDescription="@string/app_name" />
</LinearLayout>