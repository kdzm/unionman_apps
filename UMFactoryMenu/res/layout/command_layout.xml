<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/item_padding_bottom"
    android:paddingTop="@dimen/item_padding_top" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/name_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@drawable/value_text_color"
        android:textIsSelectable="false"
        android:textSize="@dimen/tv_title_size" />

    <TextView
        android:id="@+id/tv_command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/item_select"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@drawable/value_text_color"
        android:textIsSelectable="false"
        android:textSize="@dimen/tv_content_size" />

</LinearLayout>