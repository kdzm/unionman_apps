<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bg"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/setitem_height"
    android:background="@drawable/selector_setitem"
    android:gravity="left|center"
    android:minHeight="54.0dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/wifi_ssid"
        android:layout_width="@dimen/setitem_text1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setitem_left_margin"
        android:duplicateParentState="true"
        android:gravity="left|center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <TextView
        android:id="@id/wifi_summory"
        android:layout_width="@dimen/setitem_text2"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="left|center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/string_failpwd"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <ImageView
        android:id="@id/wifi_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip" />

</LinearLayout>