<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:paddingBottom="50.0dip"
    android:paddingLeft="50.0dip"
    android:paddingRight="50.0dip"
    android:paddingTop="20.0dip" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/tips"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_display_save"
            android:textColor="@color/white"
            android:textSize="25.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@id/reset_yes"
            style="@style/button"
            android:text="@string/confirm" />

        <Button
            android:id="@id/reset_no"
            style="@style/button"
            android:layout_marginLeft="80.0dip"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>