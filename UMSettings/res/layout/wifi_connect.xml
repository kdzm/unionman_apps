<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/aaa"
    android:layout_width="680.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_scale"
    android:orientation="vertical"
    android:paddingTop="35.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/wifi_ssid"
            android:layout_width="400.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="40.0dip"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="30.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="140.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/input_tip"
            android:textColor="@color/red"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="15.0dip" >

        <TextView
            android:layout_width="140.0dip"
            android:layout_height="wrap_content"
            android:text="@string/wifi_security"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/wifi_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="@string/string_none"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:layout_width="140.0dip"
            android:layout_height="wrap_content"
            android:text="@string/wifi_signal"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/wifi_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="@string/string_none"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/connected_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="10.0dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="140.0dip"
            android:layout_height="wrap_content"
            android:text="@string/wifi_status"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/wifi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/connected_ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="10.0dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="140.0dip"
            android:layout_height="wrap_content"
            android:text="@string/wifi_ip_address"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/wifi_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/wifi_layout_psk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="10.0dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="140.0dip"
            android:layout_height="wrap_content"
            android:text="@string/wifi_password"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:orientation="vertical" >

            <EditText
                android:id="@id/wifi_pswd"
                style="@style/edit_short"
                android:layout_width="wrap_content"
                android:password="true" />

            <CheckBox
                android:id="@id/wifi_pswd_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_btn_check"
                android:paddingLeft="50.0dip"
                android:text="@string/wifi_show_password" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/wifi_layout_nosaved_btn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20.0dip"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <Button
            android:id="@id/wifi_nosaved_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_connect"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/wifi_nosaved_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154.0dip"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_cancel"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/wifi_layout_connect_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <Button
            android:id="@id/wifi_connect_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54.0dip"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_disconnect"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/wifi_connect_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_forget"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/wifi_connect_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="54.0dip"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_cancel"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/wifi_layout_saved_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100.0dip"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <Button
            android:id="@id/wifi_saved_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_connect"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/wifi_saved_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_forget"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/wifi_saved_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:text="@string/wifi_cancel"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

</LinearLayout>