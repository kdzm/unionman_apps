<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sw="http://schemas.android.com/apk/res/com.unionman.settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/trans"
    android:orientation="vertical" >
    
    
    <TextView
        style="@style/title"
        android:text="@string/display_video_change" />
    
<RadioGroup 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/modegroup_id"
    android:paddingLeft="@dimen/title_left_margin"
    android:orientation="vertical">
    <RadioButton
        android:id="@+id/mode1_id"
         style="@style/radio"
        android:nextFocusUp="@+id/mode2_id"
        android:nextFocusDown="@+id/mode2_id"       
       android:text="@string/display_video_change1" />

    <RadioButton
        android:id="@+id/mode2_id"
        style="@style/radio"
        android:nextFocusUp="@+id/mode1_id"
         android:nextFocusDown="@+id/mode1_id"       
       android:text="@string/display_video_change2" /> 
 </RadioGroup>   
</LinearLayout>