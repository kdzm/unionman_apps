<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/trans"
    android:orientation="vertical" >

    <TextView
        style="@style/title"
        android:text="@string/reset" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70.0dip"
        android:gravity="center" >

        <TextView
            android:layout_width="113.0dip"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textColor="@color/white"
            android:textSize="25.0sp" />

        <EditText
            android:id="@id/reset_psw"
            style="@style/edit_short"
            android:layout_width="250.0px"
            android:nextFocusUp="@id/reset_psw"
            android:password="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="center" >

        <TextView
            android:layout_width="113.0dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/reset_error_info"
            android:layout_width="287.0dip"
            android:layout_height="wrap_content"
            android:paddingLeft="20.0dip"
            android:text="@string/reset_wrong_password"
            android:textColor="@color/red"
            android:textSize="20.0sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60.0dip"
        android:gravity="center" >

        <Button
            android:id="@id/reset_ott"
            style="@style/button"
            android:nextFocusDown="@id/reset_ott"
            android:nextFocusLeft="@id/leftMenu_layout"
            android:text="@string/reset_ott"
            android:textSize="23.0sp" />
    </LinearLayout>

    <include layout="@layout/inputts" />

</LinearLayout>