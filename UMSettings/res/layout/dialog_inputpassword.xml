<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="554.0dip"
    android:layout_height="344.0dip"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    android:paddingBottom="50.0dip"
    android:paddingLeft="50.0dip"
    android:paddingRight="50.0dip"
    android:paddingTop="40.0dip" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/login_password"
        android:textColor="@color/white"
        android:textSize="25.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:gravity="bottom|center" >
            <EditText
                android:id="@+id/et_login"
                style="@style/edit_short"
                android:layout_width="match_parent"
                android:layout_marginLeft="10.0dip"
                android:password="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_error_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50.0dip"
            android:layout_marginRight="50.0dip"
            android:gravity="center"
            android:text="@string/reset_wrong_password"
            android:textColor="@color/red"
            android:textSize="20.0sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/yes"
            style="@style/button"
            android:text="@string/confirm" />
        <Button
            android:id="@+id/no"
            style="@style/button"
            android:layout_marginLeft="80.0dip"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>