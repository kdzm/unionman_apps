<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sw="http://schemas.android.com/apk/res/com.unionman.settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/trans"
    android:orientation="vertical" >
    
    
    <TextView
        style="@style/title"
        android:id="@+id/tv_system_setting_title"
        android:text="@string/menu_sys_setting" />
    <Button 
    android:id="@+id/bt_title_for_focus"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@android:color/transparent"/>

<LinearLayout
    android:id="@+id/ll_key_sound"
    android:focusable="true"
    android:background="@drawable/linearlayout_background"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:text="@string/key_sound" 
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_arrow_img"
            android:src="@drawable/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_key_sound"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" >
        </TextView>

        <ImageView
            android:id="@+id/right_arrow_img"
            android:src="@drawable/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>  

<ImageView 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"  
     android:background="@drawable/line"  
    />

<LinearLayout
    android:id="@+id/ll_remember_source"
    android:focusable="true"
    android:background="@drawable/linearlayout_background"    
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:text="@string/remember_source" 
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_arrow_img"
            android:src="@drawable/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_remember_source"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" >
        </TextView>

        <ImageView
            android:id="@+id/right_arrow_img"
            android:src="@drawable/right_arrow"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>


<ImageView 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"  
     android:background="@drawable/line"  
    />
<Button 
    android:id="@+id/bt_none_for_focus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_vertical"
    android:background="@android:color/transparent"/>
<LinearLayout
    android:id="@+id/ll_software_update"
    android:visibility="gone"
    android:focusable="true"
    android:background="@drawable/linearlayout_background"    
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:text="@string/software_update" 
        android:textColor="@android:color/white"
        android:textSize="22sp" />    
</LinearLayout>

</LinearLayout>