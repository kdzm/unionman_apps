<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/trans"
        android:orientation="vertical" >

        <TextView
            style="@style/title"
            android:text="@string/app_detail_title_info" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setitem_left_margin"
            android:layout_marginRight="20.0dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setitem_left_margin"
                android:gravity="left|center" >

                <ImageView
                    android:id="@id/app_detail_icon"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/app_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />

                    <TextView
                        android:id="@id/app_detail_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center" >

                    <Button
                        android:id="@id/app_detail_btn_force"
                        style="@style/button"
                        android:layout_gravity="left"
                        android:nextFocusLeft="@id/leftMenu_layout"
                        android:nextFocusUp="@id/app_detail_btn_force"
                        android:text="@string/app_detail_force" />

                    <Button
                        android:id="@id/app_detail_btn_uninstall"
                        style="@style/button"
                        android:layout_marginLeft="50.0dip"
                        android:nextFocusUp="@id/app_detail_btn_uninstall"
                        android:text="@string/app_detail_uninstall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/title"
            android:text="@string/app_detail_title_storage" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="@dimen/setitem_left_margin"
            android:layout_marginRight="20.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:layout_width="300.0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/app_detail_storage_total"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />

                    <TextView
                        android:id="@id/app_detail_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:layout_width="300.0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/app_detail_storage_app"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />

                    <TextView
                        android:id="@id/app_detail_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:layout_width="300.0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/app_detail_storage_data"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />

                    <TextView
                        android:id="@id/app_detail_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@id/app_detail_btn_data"
                style="@style/button"
                android:layout_gravity="bottom|right|center"
                android:nextFocusLeft="@id/leftMenu_layout"
                android:text="@string/app_detail_storage_clear" />
        </LinearLayout>

        <TextView
            style="@style/title"
            android:text="@string/app_detail_title_cache" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="@dimen/setitem_left_margin"
            android:layout_marginRight="20.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:layout_width="300.0dip"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/app_detail_cache"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />

                    <TextView
                        android:id="@id/app_detail_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:textColor="@color/white"
                        android:textSize="20.0sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@id/app_detail_btn_cache"
                style="@style/button"
                android:layout_gravity="bottom|right|center"
                android:nextFocusLeft="@id/leftMenu_layout"
                android:text="@string/app_detail_cache_clear" />
        </LinearLayout>

        <TextView
            style="@style/title"
            android:text="@string/app_detail_title_launch" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="@dimen/setitem_left_margin"
            android:layout_marginRight="20.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/app_detail_launch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="@string/app_detail_launch_no"
                    android:textColor="@color/white"
                    android:textSize="20.0sp" />
            </LinearLayout>

            <Button
                android:id="@id/app_detail_btn_launch"
                style="@style/button"
                android:layout_gravity="bottom|right|center"
                android:nextFocusDown="@id/app_detail_btn_launch"
                android:nextFocusLeft="@id/leftMenu_layout"
                android:text="@string/app_detail_launch_clear" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>