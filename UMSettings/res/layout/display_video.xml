<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sw="http://schemas.android.com/apk/res/com.unionman.settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/trans"
    android:orientation="vertical" >
    
    
    <TextView
        style="@style/title"
        android:text="@string/display_video" />

    <com.unionman.settings.custom.CheckRadioButton
        android:id="@+id/displayvideo_compare_id"
        style="@style/checkRadioButton_normal"
        android:nextFocusUp="@+id/displayvideo_mode_id"
        android:nextFocusDown="@+id/displayvideo_mode_id"
        sw:hasImage="false"
        sw:text1="@string/display_video_compare" 
        sw:text2=""/>
    <include layout="@layout/divider" />
    <com.unionman.settings.custom.CheckRadioButton
        android:id="@+id/displayvideo_mode_id"
        style="@style/checkRadioButton_normal"
        android:nextFocusUp="@+id/displayvideo_compare_id"
        android:nextFocusDown="@+id/displayvideo_compare_id"
        sw:hasImage="false"
        sw:text1="@string/display_video_change"
        sw:text2="" />
     <include layout="@layout/divider" />
</LinearLayout>