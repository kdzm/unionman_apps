<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView 
        android:id="@+id/chan_num_text_view"
		android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:textSize="33sp"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:background="@android:color/transparent"/>
	<TextView 
	    android:id="@+id/chan_name_text_view"
		android:layout_width="300dp"
	    android:layout_height="match_parent"
        android:textSize="33sp"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:background="@android:color/transparent"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="230dp"
        android:layout_height="match_parent"
	    android:gravity="center"
	    android:paddingLeft="30dp">
     <ImageView 
         android:id="@+id/item_img_like"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:background="@drawable/program_like"
         android:visibility="invisible"
         />
     <ImageView 
         android:id="@+id/item_img_hide"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toLeftOf="@+id/item_img_like"
         android:background="@drawable/program_hide" 
         android:visibility="invisible"
         />
          <ImageView 
         android:id="@+id/item_img_move"     
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toLeftOf="@+id/item_img_hide"
         android:background="@drawable/program_move" 
         android:visibility="invisible"
         />
        <ImageView 
         android:id="@+id/item_img_del"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toLeftOf="@+id/item_img_move"
         android:background="@drawable/program_del" 
         android:visibility="invisible"
         />
    </LinearLayout>
    
</LinearLayout>
