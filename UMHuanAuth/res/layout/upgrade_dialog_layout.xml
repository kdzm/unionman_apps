<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_dialog_bg"
    android:orientation="vertical" >
    
    <TextView
       android:id="@+id/upgrade_warn_txt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_weight="1"
       android:gravity="center"
       android:layout_marginTop="20dp"
       android:paddingLeft="20dip"
       android:paddingRight="20dip"
       android:textSize="27sp"
       android:text="@string/upgrade_warn"
       android:textColor="@android:color/white"/>
    
     <TextView
       android:id="@+id/upgrade_versioninfo_txt"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       android:paddingLeft="20dip"
       android:paddingRight="20dip"
       android:textSize="22sp"
       android:textColor="@android:color/white"/>
        
    <TextView
       android:id="@+id/upgrade_notify_txt"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       android:paddingLeft="20dip"
       android:paddingRight="20dip"
       android:textSize="27sp"
       android:text="@string/upgrade_notify"
       android:textColor="@android:color/white"/>
    
    <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="15dp"
         android:background="@drawable/dvb_title_line"/>
        
 <LinearLayout 
     android:orientation="horizontal" 
     android:gravity="center"
     android:layout_marginBottom="20dp"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <Button 
         android:id="@+id/ok_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="40dp"
         android:text="@string/OK"
         android:padding="2dip"
         android:gravity="center"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/btn_bg"
         android:textSize="27sp"
         android:textColor="@android:color/white"/>
      <Button 
         android:id="@+id/cancel_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/Cancel"
         android:padding="2dip"
         android:gravity="center"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/btn_bg"         
         android:textSize="27sp"
         android:textColor="@android:color/white"/>
 </LinearLayout>"
</LinearLayout>
