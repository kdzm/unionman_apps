<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/supplieridtextView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_supplier_id"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/walletIDtextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/wallet_id"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/productIDtextView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_product_id"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/chargeintervaltextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_charge_interval"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/unablerecordpricetextView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_unable_record_price"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/ablerecordpricetextView"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:gravity="right"
            android:text="@string/dvt_able_record_price"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="0dp"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pintextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_input_pin"
            android:textColor="@color/white"
            android:textSize="24sp" >

        </TextView>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:selectAllOnFocus="true" >

            <requestFocus></requestFocus>
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/dvt_tap_or_not"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/tapspinner"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/OrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/dvt_buy" />

        <Button
            android:id="@+id/CancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="@string/dvt_ipp_order_cancel" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>