<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/stb_info"
            android:textColor="@color/white"
            android:textSize="30sp" >
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:layout_marginTop="50dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView13"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="@string/dvt_stb_num"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_stbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView20"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:text="@string/hardware_ver"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_hardware_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView16"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:text="@string/software_ver"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_software_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/searchmenu_btn"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="right"
            android:text="@string/loader_ver"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_loader_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            
            android:textColor="@color/white"
            android:textSize="24sp" >
        </TextView>
    </LinearLayout>
    
    
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/txt_stb_info_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/smart_card_status_help"
            android:textColor="@color/white"
            android:textSize="28sp" >
        </TextView>
    </LinearLayout>
</LinearLayout>
    