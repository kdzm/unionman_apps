<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/dvt_working_time"
                android:textColor="@color/white"
                android:textSize="30sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/searchmenu_btn"
            android:orientation="horizontal"
            android:paddingLeft="50dp" >

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right|center"
                android:text="@string/dvt_start_time"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>

            <EditText
                android:hint="0"
                android:maxLength="2"
                android:id="@+id/tv_start_hour"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/time_selected"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="@string/mao_hao"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/tv_start_minute"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/time_selected"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="2" />

            <!--
                 <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/textView2" />
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/searchmenu_btn"
            android:orientation="horizontal"
            android:paddingLeft="50dp" >

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right|center"
                android:text="@string/dvt_end_time"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>

            <EditText 
                android:hint="0"
                android:maxLength="2"              
                android:id="@+id/tv_end_hour"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/time_selected"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="@string/mao_hao"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <EditText
                android:hint="0"
                android:maxLength="2"
                android:id="@+id/tv_end_minute"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/time_selected"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number" />


            <!--
                 <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/textView2" />
            -->
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchmenu_btn" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:gravity="right"
                android:text="@string/dvt_input_pin"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>

            <EditText
                
                android:id="@+id/editText3"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/textView4"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:selectAllOnFocus="true" >

                <requestFocus>
                </requestFocus>
            </EditText>
        </RelativeLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ok_btn" />
        
		<RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchmenu_btn" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="560dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/dvt_worktime_tips"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>
        </RelativeLayout>
		<RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchmenu_btn" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="560dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/dvt_pin_tips"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>
        </RelativeLayout>
                        
    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/txt_condition_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/modify_working_time_help"
            android:textColor="@color/white"
            android:textSize="28sp" >
        </TextView>
    </LinearLayout>
</LinearLayout>