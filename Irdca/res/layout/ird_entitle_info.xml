<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="720dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >
	

		
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
		    android:id="@+id/TextView02"
		    android:layout_width="150dp"
		    android:layout_height="60dp"
		    android:layout_marginLeft="0dp"
		    android:gravity="center"
		    android:text="@string/dvt_program_name"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textSize="24sp" >
</TextView>


		<TextView
		    android:id="@+id/textView2"
		    android:layout_width="150dp"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="30dp"
		    android:gravity="center"
		    android:text="@string/dvt_start_time"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textSize="24sp" >
</TextView>

		<TextView
		    android:id="@+id/textView4"
		    android:layout_width="150dp"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="30dp"
		    android:gravity="center"
		    android:text="@string/dvt_end_time"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textSize="24sp" >
</TextView>
	</LinearLayout>
	
	<ListView
		android:fadeScrollbars="false"
		android:id="@+id/dvt_general_listView1"
		android:layout_gravity="center"
		android:layout_marginLeft="14dp"
		android:layout_marginRight="10dp"
		android:layout_width="match_parent"
		android:layout_height="392dp"
		android:fadingEdge="none"
		android:cacheColorHint="#00000000"
		android:listSelector="@drawable/searchmenu_btn" />

		<LinearLayout
		android:id="@+id/linearLayout3"
		android:layout_width="match_parent"
		android:layout_height="60dp">


		<TextView
		    android:id="@+id/TextView06"
		    android:layout_width="250dp"
		    android:layout_height="60dp"
		    android:layout_marginLeft="80dp"
		    android:gravity="center"
		    android:text="@string/dvt_entitles_num"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textSize="24sp" >
		</TextView>

		<TextView
		    android:id="@+id/entitles_num"
		    android:layout_width="150dp"
		    android:layout_height="60dp"
		    android:layout_marginLeft="0dp"
		    android:gravity="center"
            android:textColor="@color/white"
		    android:textSize="24sp" >
		</TextView>
	</LinearLayout>
		
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/help_ca_entitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/choose_back_help"
            android:textColor="@color/white"
            android:textSize="28sp" >
        </TextView>
    </LinearLayout>
</LinearLayout>