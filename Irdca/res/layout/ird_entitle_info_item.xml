<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="710dp"
    android:layout_height="55dp"
    android:orientation="horizontal"
    tools:context="com.um.ui.Tf_general_authorized" >

    <TextView
        android:id="@+id/TextView_01"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:text="@string/prog_id"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp" >
    </TextView>

    <TextView
        android:id="@+id/TextView_02"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:text="@string/video_record"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp" >
    </TextView>

    <TextView
        android:id="@+id/TextView_03"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="@string/expired_time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp" >
    </TextView>

</LinearLayout>