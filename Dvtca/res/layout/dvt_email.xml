<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg2"
        android:orientation="vertical" >

	<TextView
		android:gravity="center"
		android:textSize="30sp"
		android:layout_height="46dp"
		android:layout_width="match_parent" android:text="@string/mail">
	</TextView>
	<LinearLayout
		android:layout_marginRight="30dip"
		android:layout_marginLeft="30dip"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="10dip">

		<TextView
		    android:layout_width="68dp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="20dp"
		    android:gravity="center"
		    android:text="@string/sn"
		    android:textSize="24sp" />

		<TextView
		    android:layout_width="288dp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="20dp"
		    android:gravity="center"
		    android:text="@string/main_title"
		    android:textSize="24sp" />

		<TextView
		    android:layout_width="88sp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="20dp"
		    android:gravity="center"
		    android:text="@string/dvt_status"
		    android:textSize="24sp" />

		<TextView
		    android:layout_width="148dp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="60dp"
		    android:gravity="center"
		    android:text="@string/sender_name"
		    android:textSize="24sp" />

	</LinearLayout>
	<ListView
		android:fadeScrollbars="false"
		android:id="@+id/MyemailView"
		android:layout_gravity="center"
		android:layout_marginRight="30dip"
		android:layout_marginLeft="30dip"
		android:layout_width="740dp"
		android:layout_height="322dp"
		android:fadingEdge="none"
		android:cacheColorHint="#00000000"
		android:listSelector="@drawable/searchmenu_btn" />

	<LinearLayout
            android:layout_width="741dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip" >

		<TextView
		    android:layout_width="130sp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="20dp"
		    android:gravity="left"
		    android:text="@string/dvt_mail_read"
		    android:textSize="24sp" />

		<TextView
		    android:id="@+id/mailread"
		    android:layout_width="88sp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="2dp"
		    android:gravity="left"
		    android:textSize="24sp" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/dvt_mail_disp_num"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/maxmail_num"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:gravity="left"
                android:textSize="24sp" />

            <TextView
                android:layout_width="130sp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/dvt_mail_count"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/mail_count"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:gravity="left"
                android:textSize="24sp" />
        </LinearLayout>
	</LinearLayout>
	
    
		<LinearLayout
	android:layout_marginTop="6dp"
		android:layout_marginRight="30dip"
		android:layout_marginLeft="30dip"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<TextView
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="@string/read_and_delete"
			android:textSize="30sp" />
	</LinearLayout>
	
		
</LinearLayout>