<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg">
    
    <LinearLayout
        android:id="@+id/app_sort_bg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="100dip"
	    android:paddingBottom="70dip"
        android:orientation="vertical"
        android:visibility="invisible">
        
	   <LinearLayout
	        android:id="@+id/app_sort_list_title_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	         "
	        <TextView 
	            android:id="@+id/app_sort_name_txt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:gravity="center"
	            android:text="@string/name"
	            android:textSize="33sp"
	            android:textColor="@color/white"
	            android:layout_marginLeft="10dip"
	            android:background="@drawable/app_sort_type_item_bg">
	        </TextView>
	        
	         <TextView 
	            android:id="@+id/app_sort_size_txt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:nextFocusLeft="@+id/app_sort_name_txt"
	            android:text="@string/size"
	            android:textSize="33sp"
	            android:textColor="@color/white"
	            android:gravity="center"
	            android:layout_marginLeft="20dip"
	            android:background="@drawable/app_sort_type_item_bg">
	        </TextView>

	    </LinearLayout>
	    
	    <LinearLayout
	       android:id="@+id/app_sort_list_layout" 
	       android:layout_width="wrap_content"
	       android:layout_height="0dip"
	       android:layout_weight="1"
	       android:orientation="vertical"
	       android:background="@drawable/setting_dialog_bg">
	        
		     <ListView
		      android:id="@+id/app_sort_list"
		      android:layout_width="980dip"
		      android:layout_height="wrap_content"
		      android:cacheColorHint="@color/cache_color_hint_color"
		      android:divider="@drawable/line"
		      android:fadingEdge="none"
		      android:listSelector="@drawable/linearlayout_background"
		      android:scrollbars="vertical" 
		      android:scrollbarStyle="outsideInset"
		      android:clickable="true">
			</ListView>   
	    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
