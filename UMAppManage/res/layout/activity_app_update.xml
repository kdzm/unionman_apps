<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg">
    
    <LinearLayout
        android:id="@+id/app_update_bg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="100dip"
	    android:paddingBottom="70dip"
        android:orientation="vertical"
        android:visibility="invisible">
        
	   <LinearLayout
	        android:id="@+id/app_update_list_title_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingLeft="8dip">
	        <TextView 
	            android:id="@+id/app_update_list_title_txt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/update"
	            android:textSize="22sp"
	            android:textColor="@color/greywhite">
	        </TextView>
	         <TextView 
	            android:id="@+id/app_update_list_count_txt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="22sp"
	            android:textColor="@color/greywhite">
	        </TextView>
	    </LinearLayout>
	    
	    <LinearLayout
	       android:id="@+id/app_update_list_layout" 
	       android:layout_width="wrap_content"
	       android:layout_height="0dip"
	       android:layout_weight="1"
	       android:orientation="vertical"
	       android:background="@drawable/setting_dialog_bg">
	        
		     <ListView
		      android:id="@+id/app_update_list"
		      android:layout_width="980dip"
		      android:layout_height="wrap_content"
		      android:cacheColorHint="@color/cache_color_hint_color"
		      android:divider="@drawable/line"
		      android:fadingEdge="none"
		      android:listSelector="@drawable/app_item_hight"
		      android:scrollbars="vertical" 
		      android:clickable="true">
			</ListView>   
	    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
