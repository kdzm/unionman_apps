<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="true"
    android:descendantFocusability= "blocksDescendants">
    
	<LinearLayout
	    android:id="@+id/app_icon_layout" 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="67dp"
	    android:gravity="center_vertical"
	    android:paddingLeft="20dip"
	    android:paddingTop="1dip"
	    android:paddingBottom="1dip">
	    
	    <ImageView 
	        android:id="@+id/app_icon_img"
	        android:layout_width="67dp"
	        android:layout_height="67dp"
	        />
	 </LinearLayout>
	 
	<LinearLayout
	    android:id="@+id/app_info_layout"
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="67dp"
	    android:layout_toRightOf="@+id/app_icon_layout"
	    android:layout_marginLeft="4dip"
	    android:gravity="center_vertical"
	    android:paddingTop="1dip"
	    android:paddingBottom="1dip">
	    
	    <TextView 
	        android:id="@+id/app_name_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/greywhite"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/app_size_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/greywhite"
	        android:textSize="22sp"       
	        />
	</LinearLayout>
	
    <LinearLayout
	    android:id="@+id/app_version_layout" 
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="67dp"
		android:layout_centerHorizontal="true"
		android:gravity="center_vertical|left"
	    android:paddingTop="1dip"
	    android:paddingBottom="1dip">
	    
	    <TextView
	        android:id="@+id/app_version_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="@color/greywhite"
	        android:textSize="22sp"        
	        />
	 </LinearLayout>
	 
	<LinearLayout 
	    android:id="@+id/app_control_layout"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="67dp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="15dip"
	    android:paddingTop="1dip"
	    android:paddingBottom="1dip"
	    android:duplicateParentState="true">
	    
	    <Button 
	        android:id="@+id/app_control_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/app_btn_bg"
	        android:duplicateParentState="true"
	        />
	</LinearLayout>
</RelativeLayout>
