<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- new factory menu style -->
    <style name="pagetitle_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="pageline_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="pagelayout_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/button_state</item>
    </style>

    <style name="pagelayout_style_vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/button_state</item>
    </style>

    <style name="pagelayout_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="pagelayout_cross_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">@string/str_facmenu_rightcross</item>
    </style>

    <style name="pagelayout_choice_layout_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="pagelayout_choice_left_style">
        <item name="android:layout_width">36dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">@string/str_facmenu_leftcross</item>
    </style>

    <style name="pagelayout_choice_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:text">@string/str_facmenu_nr</item>
    </style>

    <style name="pagelayout_choice_right_style">
        <item name="android:layout_width">36dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">@string/str_facmenu_rightcross</item>
    </style>

    <style name="pagelayout_nextpage_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">@string/str_facmenu_nextpagecross</item>
    </style>

</resources>