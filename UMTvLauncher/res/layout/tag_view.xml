     <RelativeLayout
        android:id="@+id/tag_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@+id/tag_app"
        android:nextFocusRight="@+id/tag_education">

        <TextView
            android:id="@+id/tag_first_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tag_first"
            android:textColor="@color/white"
            android:textSize="33sp" />

        <ImageView
            android:id="@+id/tag_first_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/page_tag_selected"
            android:visibility="invisible" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/tag_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@+id/tag_first"
        android:nextFocusRight="@+id/tag_game" >

        <TextView
            android:id="@+id/tag_education_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tag_education"
            android:textColor="@color/white"
            android:textSize="33sp" />

        <ImageView
            android:id="@+id/tag_education_img"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/page_tag_selected"
            android:visibility="invisible" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/tag_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@+id/tag_education"
        android:nextFocusRight="@+id/tag_app" >

        <TextView
            android:id="@+id/tag_game_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tag_game"
            android:textColor="@color/white"
            android:textSize="33sp" />

        <ImageView
            android:id="@+id/tag_game_img"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/page_tag_selected"
            android:visibility="invisible" />
    </RelativeLayout>
    
	<RelativeLayout
        android:id="@+id/tag_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@+id/tag_game"
        android:nextFocusRight="@+id/tag_first" >

        <TextView
            android:id="@+id/tag_app_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
