<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:background="@drawable/dvb_list_item"
    android:orientation="horizontal" >


    <TextView
        android:id="@+id/Dvbplayer_TextView_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/search_content_prog_list_item_margin_left"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/search_content_prog_list_item_text_size" />
	<TextView
	    android:id="@+id/Dvbplayer_TextView_01"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="@dimen/search_content_prog_list_item_margin_left"
	    android:gravity="center|left"
	    android:text="@string/prog_id"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="@dimen/search_content_prog_list_item_text_size" >

</TextView>
</LinearLayout>
