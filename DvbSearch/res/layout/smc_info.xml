<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="933dp"
        android:layout_height="516dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="933dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/smc_info"
            android:textSize="30sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="679dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:layout_weight="0.53"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.13"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="@string/smc_numb"
                android:textSize="25sp" >
            </TextView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/srting_null"
                android:textSize="25sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.16"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="@string/soft_version"
                android:textSize="25sp" >
            </TextView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/srting_null"
                android:textSize="25sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.10"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="@string/e_value"
                android:textSize="25sp" >
            </TextView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/srting_null"
                android:textSize="25sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
 </LinearLayout>
</LinearLayout>