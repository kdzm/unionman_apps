<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:background="#46a1a1a1"
         >
    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tf_condition_access"
            android:textColor="@color/white"
            android:textSize="30sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:clickable="true"
        android:gravity="center|top"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_smc_status_info"
            android:textColor="@color/white"
            android:textSize="24sp" >

            <requestFocus />
        </Button>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
           
            android:textColor="@color/white" >
        </TextView>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_change_pin"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
            >
        </TextView>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_watch_level"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
            >
        </TextView>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_working_time"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
            >
        </TextView>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_pair_info"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
            >
        </TextView>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_operator_info"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#46a1a1a1"
           >
        </TextView>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/tf_smc_updat_status"
            android:textColor="@color/white"
            android:textSize="24sp" >
        </Button>
    	<Button
        	android:id="@+id/button8"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:background="@drawable/searchmenu_btn"
            android:text="@string/mail"
            android:textColor="@color/white"
            android:textSize="24sp"         
        />        
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:background="#46a1a1a1"
        >
    </TextView>

</LinearLayout>

</LinearLayout>