<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_bg"
    >
	<RelativeLayout
		android:id="@+id/file_name_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
	    android:layout_marginTop="70dp"
		android:gravity="center"
		>

		<com.um.music.RotateTextView
		    android:id="@+id/artistname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:singleLine="true"
		    android:textSize="24sp"
		    android:textColor="@color/black"
		    android:textStyle="bold"
			/>

		<com.um.music.RotateTextView
		    android:id="@+id/albumname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:singleLine="true"
		    android:textSize="24sp"
		    android:textColor="@color/black"
		    android:textStyle="bold"
			/>

		<com.um.music.RotateTextView
		    android:id="@+id/trackname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:singleLine="true"
		    android:textSize="24sp"
		    android:textColor="@color/black"
		    android:textStyle="bold"
			/>
	</RelativeLayout>
	<ImageView
		android:id="@+id/album"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="106dp"
		android:layout_marginLeft="417dp"
		android:background="@drawable/music_center_bg"
		>
	</ImageView>

	<com.um.music.util.LyricView
	    android:id="@+id/audio_lrc"
	    android:layout_width="match_parent"
	    android:layout_height="180dp"
	    android:layout_marginTop="450dp"
	    android:layout_centerHorizontal="true"
		/>
            
    <include layout="@layout/audio_player_common"/>

</RelativeLayout>