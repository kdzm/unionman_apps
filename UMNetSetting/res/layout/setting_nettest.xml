<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setting_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" >    

      <RelativeLayout
            android:id="@+id/ether_setting_ll"
            android:layout_width="967dp"
		    android:layout_height="530dp"
		    android:layout_gravity="center"
	        android:background="@drawable/setting_dialog_bg"
            >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:text="@string/net_test_setting"
                android:textSize="36px" />
            <ImageView
		        android:id="@+id/tv"
		        android:layout_width="170dp"
		        android:layout_height="170dp"
		        android:layout_centerVertical="true"
		        android:layout_toLeftOf="@+id/waitingBarleft"
		        android:background="@drawable/netest_tv_dis"
		        />
            <ImageView 
                android:id="@+id/netLeftError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
		        android:layout_marginLeft="302dp"
                />
            
           <LinearLayout
                android:id="@+id/waitingBarleft"
		        android:layout_width="110dp"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toLeftOf="@+id/router"
		        android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
            </LinearLayout> 
            
		    <ImageView
		        android:id="@+id/router"
		        android:layout_width="170dp"
		        android:layout_height="170dp"
		        android:layout_centerInParent="true"
		        android:background="@drawable/netest_router_dis"
		        android:scaleType="centerInside"
		        android:adjustViewBounds="true"
		        />
			<LinearLayout
			    android:id="@+id/waitingBarright"
			    android:orientation="horizontal"
		        android:layout_width="110dp"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/router">
                 <ImageView
                    android:id="@+id/point6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    />
                <ImageView
                    android:id="@+id/point10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/netest_line_dis"
                    /> 
			</LinearLayout>
		    <ImageView 
                android:id="@+id/netRightError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="582dp"
                />
	        <ImageView
	            android:id="@+id/net"
		        android:layout_width="170dp"
		        android:layout_height="170dp"
		        android:layout_alignBottom="@+id/router"
		        android:background="@drawable/netest_net_dis"
		        android:layout_toRightOf="@+id/waitingBarright"
		        android:scaleType="centerInside"
		        android:adjustViewBounds="true"
	         />
	        <TextView
	            android:id="@+id/netest_tip" 
	            android:paddingTop="110dp"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/router"
	            android:textSize="24px"
	            android:gravity="center_horizontal"/>
        </RelativeLayout>
        
    <!-- </LinearLayout> -->
</LinearLayout>