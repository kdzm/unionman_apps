<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/set_time"
            android:textColor="@color/white"
            android:textSize="33sp" />
    </LinearLayout>

 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setting_dialog_bg"
    android:orientation="vertical" >
	<LinearLayout
	    android:id="@+id/ll_checkbox"
	    android:layout_width="fill_parent"
	    android:layout_height="76dp"
	        android:background="@drawable/linearlayout_background"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <TextView
            android:id="@+id/autoupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:textSize="22sp"
            android:paddingLeft="60dp"
            android:text="@string/auto_update"/>
	    
	    <CheckBox 
	        android:id="@+id/cb"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	          android:layout_marginRight="60dp"
	        />
	    
	</LinearLayout>
	             <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line" />
    <LinearLayout
        android:id="@+id/ll_setdate"
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        	android:background="@drawable/linearlayout_background"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/showdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:textSize="22sp"
            android:paddingLeft="60dp"
            android:text="@string/adjust_failed"/>

        <Button
            android:id="@+id/pickdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
           android:layout_marginRight="60dp"
            android:text="@string/set_date" />
    </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line" />
    <LinearLayout
        android:id="@+id/ll_settime"
        android:layout_width="fill_parent"
        android:layout_height="76dp"
	        android:background="@drawable/linearlayout_background"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center_vertical"        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/showtime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:textSize="22sp"
            android:paddingLeft="60dp"
            android:text="@string/adjust_success"/>

        <Button
            android:id="@+id/picktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginRight="60dp"
            android:text="@string/set_time" />
    </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line" />
</LinearLayout>
</LinearLayout>