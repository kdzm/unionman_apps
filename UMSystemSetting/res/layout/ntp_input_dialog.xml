<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:netsetup="http://schemas.android.com/apk/res/cn.com.unionman.umtvsetting.system"
    android:id="@+id/dailogbg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dvb_list_bg"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/system_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/set_ntp_address"
            android:textColor="@color/white"
            android:textSize="22sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:gravity="center_vertical">
        <cn.com.unionman.umtvsetting.system.util.IpAddrEdit
            android:id="@+id/ipet_ipaddr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            netsetup:text="@string/ethernet_ipaddr"
         >
        </cn.com.unionman.umtvsetting.system.util.IpAddrEdit>
    </LinearLayout>
    </LinearLayout>
			<ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	              android:layout_marginBottom="15dp"
	            android:background="@drawable/dvb_title_line"
            	/>
    <LinearLayout
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/user_back_ok"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/ok_btn"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="22sp" >
        
        </Button>
                <Button
            android:id="@+id/user_back_cancle"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/ok_btn"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>

</LinearLayout>