<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
	<TextView
	    android:id="@+id/external_storage_device_name_txt" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:textSize="22sp"/>      
	
	 <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:paddingLeft="30dp">
	    
	     <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@color/transparent"
		    android:orientation="horizontal">
			 <TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
	 		    android:textColor="@color/greywhite"
	 		    android:textSize="18sp"
	 		    android:text="@string/setting_storageinfototal" />
			 <TextView 
			    android:id="@+id/external_storage_device_total_memory_size_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			 	android:layout_marginRight="20dp"				
				android:layout_gravity="right"
	 		    android:textColor="@color/greywhite"
	 		    android:textSize="18sp"
	 		    />
            <TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
	 		    android:textColor="@color/greywhite"
	 		    android:textSize="18sp"
	 		    android:text="@string/setting_storageinfoavail" />
			 <TextView 
			    android:id="@+id/external_storage_device_avail_memory_size_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
	 		    android:textColor="@color/greywhite"
	 		    android:textSize="18sp"
	 		    />
		</LinearLayout>
		
	     <ProgressBar
 		    android:id="@+id/external_storage_device_pg"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content" 
            android:maxHeight="10dp"		 		    
            android:minHeight="10dp" 	
            android:maxWidth="200dp"	
            android:minWidth="400dp"   
 		    style="?android:attr/progressBarStyleHorizontal"
 		    android:max="100"
       		android:progress="0"/>
	 </LinearLayout>
	 
</LinearLayout>
