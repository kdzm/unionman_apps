<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg"
    android:gravity="center"
    android:orientation="vertical" >
       <LinearLayout
        android:layout_width="1027dp"
        android:layout_height="640dp"
       android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/system_update_local"
            android:textColor="@color/white"
            android:textSize="33sp" />
    </LinearLayout>       
        <ListView
            android:id="@+id/local_upgrade_list"
            android:background="@drawable/setting_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:cacheColorHint="@color/cache_color_hint_color"
            android:divider="@drawable/line"
            android:fadingEdge="none"
            android:listSelector="@drawable/linearlayout_background"
            android:scrollbarStyle="outsideInset"
            android:clickable="true">
          </ListView>          
    
</LinearLayout>
</LinearLayout>