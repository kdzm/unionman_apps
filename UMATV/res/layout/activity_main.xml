<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ATVMainActivity" >

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:visibility="visible" />

    <TextView 
        android:id="@+id/tv_nosignal"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/setting_dialog_bg"
        android:text="@string/no_signal"
        android:visibility="invisible"/>
    
        <ImageView 
        android:id="@+id/tv_nosignal_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_select"
        android:visibility="invisible"/>
    
    <ImageView 
        android:id="@+id/tv_screensaver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ss00"
        android:visibility="gone"/>
 
    <com.um.atv.widget.NoSignalLayout
        android:id="@+id/nosignallayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </com.um.atv.widget.NoSignalLayout>

    <com.um.atv.widget.ChannelEditView
        android:id="@+id/channeleditview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
         android:visibility="gone"
        >
    </com.um.atv.widget.ChannelEditView>
    <com.um.atv.widget.SignalShow 
         android:id="@+id/SignalShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone"
        >
    </com.um.atv.widget.SignalShow>

    <LinearLayout
        android:id ="@+id/mydialog"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
</RelativeLayout>
