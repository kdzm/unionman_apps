<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:background="@drawable/atv_bg" >
        <TextView
            android:id="@+id/prompt_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <Button
            android:id="@+id/ok_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/prompt_txt"
            android:layout_below="@+id/prompt_txt"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/channeledit_dialog_button_selector"
            android:text="@string/move_channel_ok"
            android:textColor="@color/white"
			/>
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/prompt_txt"
            android:layout_below="@+id/prompt_txt"
            android:layout_marginRight="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/channeledit_dialog_button_selector"
            android:text="@string/move_channel_cancel"
            android:textColor="@color/white"
			/>
</RelativeLayout>
