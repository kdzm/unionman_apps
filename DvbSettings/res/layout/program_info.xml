<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="760dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:background="@drawable/dvb_list_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/progress_info"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" >
            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dvb_title_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fre_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/program_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/program_name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/program_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/program_num"
                    android:textSize="24sp" />

                
                
                <TextView
                    android:id="@+id/sound_pid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_pid"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/audio_codec_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_codec"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/video_pid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_pid"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/video_codec_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_codec"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/video_resolution_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_resolution"
                    android:textSize="24sp" />
                
                <TextView
                    android:id="@+id/bandwidth_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bandwidth"
                    android:visibility="invisible"
                    android:textSize="24sp" />
                
                <TextView
                    android:id="@+id/frequency_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frequency"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/symbol_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symbol"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/modulation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulation"
                    android:textSize="24sp" />
                
				<TextView
                    android:id="@+id/signal_strenth_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signal_qingdu"
                    android:textSize="24sp" />
				
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/program_name_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/program_num_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                
                <TextView
                    android:id="@+id/sound_pid_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/audio_codec_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/video_pid_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/video_codec_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/video_resolution_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />
                
                <TextView
                    android:id="@+id/bandwidth_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:visibility="invisible"
                    android:textSize="24sp" />
                
                <TextView
                    android:id="@+id/frequency_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/symbol_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/modulation_txt_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unknow"
                    android:textSize="24sp" />
				<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="center"
				    android:orientation="horizontal">
				     <SeekBar
		                android:id="@+id/signal_seekbar"
		                android:layout_width="450dip"
		                android:layout_height="10dp"
		                android:layout_marginLeft="-14dp"
		                android:layout_gravity="center"
		                android:layout_weight="1"
		                android:focusable="false"
		                android:progressDrawable="@drawable/seekbar_style"
		                android:thumb="@color/transparent" />
				    <TextView
	                    android:id="@+id/signal_strenth_txt_val"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/unknow"
	                    android:textSize="24sp" />
				</LinearLayout>
                
                                
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>