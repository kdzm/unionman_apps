<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg"
    android:orientation="vertical" >
    
<LinearLayout 
    android:id="@+id/setting_containerlayout"
    android:layout_width="967dp"
    android:layout_height="600dp"
    android:layout_marginLeft="157dp"
    android:layout_marginTop="60dp"
    android:background="@color/transparent_color"
       android:orientation="vertical" 
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/cable_settings"
            android:textColor="@color/white"
            android:textSize="33sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dvb_list_bg"
        android:orientation="vertical"
         >

        <ListView
            android:id="@+id/dvb_setting_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cacheColorHint="@color/cache_color_hint_color"
            android:divider="@drawable/dvb_list_line"
            android:fadingEdge="none"
            android:listSelector="@drawable/linearlayout_background"
            android:scrollbarStyle="outsideInset"
            android:clickable="true"
            >
        </ListView>


    </LinearLayout>
    </LinearLayout>
    
   
</LinearLayout>
