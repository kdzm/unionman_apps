<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dvbsetting_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/searchmode"
        android:layout_width="@dimen/tuner_settting_width"
        android:layout_height="@dimen/tuner_settting_height"
        android:layout_marginTop="@dimen/tuner_settting_height"
        android:background="@drawable/dvbsetting_item_sh"
        android:gravity="center|left" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/tuner_settting_text_width"
            android:layout_height="@dimen/tuner_settting_text_height"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/tuner_setting"
            android:textSize="@dimen/tuner_settting_text_size" >
        </TextView>

        <TextView
            android:id="@+id/dvbcsearch"
            android:layout_width="@dimen/tuner_settting_text1_width"
            android:layout_height="@dimen/tuner_settting_text1_height"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tuner_settting_margin_left"
            android:textColor="@color/white"
            android:text="@string/cable_source"
            android:focusable="true"
            android:nextFocusDown="@+id/sign_check_btn"
            android:textSize="@dimen/tuner_settting_text_size" >
            <requestFocus>
            </requestFocus>
        </TextView>

        <TextView
            android:id="@+id/dtmbsearch"
            android:layout_width="@dimen/tuner_settting_text1_width"
            android:layout_height="@dimen/tuner_settting_text1_height"
            android:gravity="center"
            android:layout_marginLeft="@dimen/tuner_settting_margin_left"
            android:textColor="@color/white"
            android:text="@string/dtmb_source"
            android:focusable="true"
            android:nextFocusDown="@+id/sign_check_btn"
            android:textSize="@dimen/tuner_settting_text_size" >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_sure"
        android:layout_width="@dimen/tuner_settting_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/tuner_settting_button_margin_top"
        android:orientation="vertical" >

        <Button
            android:id="@+id/search_check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dvbsetting_ok_sh"
            android:gravity="center"
            android:focusable="true"
            android:text="@string/ok"
            android:textSize="@dimen/tuner_settting_text_size">
        </Button>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/tuner_settting_image_view_width"
        android:layout_height="@dimen/tuner_settting_image_view_height"
        android:id="@+id/search_focus"
        android:layout_marginTop="@dimen/tuner_settting_image_view_margin_top"
        android:layout_marginLeft="@dimen/tuner_settting_image_view_margin_left"
        android:background="@drawable/dvbsetting_select_ok">
    </ImageView>

</RelativeLayout>