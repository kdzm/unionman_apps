<resources>
    <style name="AppTheme" parent="android:Theme.Light" />
    <style name="Theme.NetworkUpgrade" parent="@android:style/Theme.NoTitleBar">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowBackground">@drawable/background</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:cacheColorHint">#0000</item>
		<item name="android:windowContentOverlay">@null</item>  
		<item name="android:textSize">24sp</item>
    </style>

    <style name="button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28.0sp</item>
    </style>
    
    <style name="edit_long">
        <item name="android:textSize">30.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingLeft">7.0dip</item>
        <item name="android:paddingRight">7.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    
</resources>