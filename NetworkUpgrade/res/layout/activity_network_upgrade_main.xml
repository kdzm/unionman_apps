<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    
    <Button
        android:id="@+id/network_upgrade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="900dip"
        android:layout_marginTop="505dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/button_style"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/upgrade"
        android:textColor="#ffffffff" />

    <ImageView
        android:id="@+id/download_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="256dip"
        android:layout_marginTop="118dip"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/download" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="348dip"
        android:layout_marginTop="118dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/networkupgrade_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="#ff000000"
            android:text="@string/networkupgrade"
            android:textSize="40dip" >
        </TextView>

        <TextView
            android:id="@+id/networkupgrade_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="30dip"
            android:textColor="#ff000000"
            android:text="@string/networkupgrade_address"
            android:textSize="35dip" >
        </TextView>

        <EditText
            android:id="@+id/server_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/button_style"
            android:inputType="text"
            android:paddingLeft="3dip"
            android:scrollHorizontally="true"
            android:textColor="#ffffffff"
            android:textCursorDrawable="@null"
            android:textSize="32dip" />

        <TextView
            android:id="@+id/stbinfo_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dip"
            android:textColor="#ff000000"
            android:text="@string/stb_info"
            android:textSize="35dip" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/software_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="@string/software_version"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>

            <TextView
                android:id="@+id/software_number_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/version_number"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hardware_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="@string/hardware_version"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>

            <TextView
                android:id="@+id/hardware_number_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/version_number"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/serial_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="@string/serial_number_version"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>

            <TextView
                android:id="@+id/serial_number_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/version_number"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mac_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="@string/mac_address"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>

            <TextView
                android:id="@+id/mac_addr_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ff000000"
                android:textSize="24dip" >
            </TextView>
        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/save"
        android:layout_marginLeft="920dip"
        android:layout_marginTop="100dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/save_style"
        android:contentDescription="@string/save"        
        />
      <TextView
          android:id="@+id/save_text"
		  android:layout_marginLeft="910dip"
		  android:layout_marginTop="140dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/save"
          android:textSize="24dip" >
      </TextView>
    <ImageButton
        android:id="@+id/default_id"
        android:layout_marginLeft="990dip"
        android:layout_marginTop="100dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/default_style"
        android:contentDescription="@string/default_text"
        />
      <TextView
          android:id="@+id/default_text"
		  android:layout_marginLeft="983dip"
		  android:layout_marginTop="140dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/default_text"
          android:textSize="24dip" >
          </TextView>

</RelativeLayout>