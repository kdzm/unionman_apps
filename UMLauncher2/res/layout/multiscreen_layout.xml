<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_multiscreen" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/launcher_bg">
    
        <LinearLayout
        android:id="@+id/txt_TitleLayout"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="110dp"
		android:layout_marginTop="50dp"
		android:orientation="horizontal"
		>
		
        <ImageView
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/btn_camera_arrow_left_default"
	        />
        
		<TextView
		    android:id="@+id/app_txt_Title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:text="@string/multi_screen"
			android:textColor="@color/white"
			android:textSize="35sp"
			/>
	</LinearLayout>
	
    <RelativeLayout
        android:id="@+id/app_item_dlna"
     
        android:layout_width="343dp"
        android:layout_height="230dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="153dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:nextFocusUp="@+id/app_item_multiscreen"
        android:nextFocusDown="@+id/app_item_multiscreen"
        android:nextFocusRight="@+id/app_item_miracast"
        android:nextFocusLeft="@+id/app_item_skyplay">

        <RelativeLayout
            android:id="@+id/view_dlna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/andr_tv" >

            <ImageView
                android:id="@+id/app_dlna_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/page_dlna" />

          
        </RelativeLayout>
         <RelativeLayout
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom ="@+id/view_dlna"
		            android:layout_alignLeft ="@+id/view_dlna"
		            android:background="@drawable/andr_bottom"  >   
		      <TextView
                android:id="@+id/app_dlna_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
     			android:layout_centerInParent="true"
                android:text="@string/app_dlna"
                android:textColor="@color/white"
                android:textSize="22sp" /> 
	        </RelativeLayout>
	         <RelativeLayout
	          android:id="@+id/view_dlna_focus"
	          android:layout_width="343dp"
	          android:layout_height="230dp"
	          android:background="@drawable/focus"
	         />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/app_item_miracast"
       android:layout_width="343dp"
        android:layout_height="230dp"
        android:layout_marginLeft="646dp"
        android:layout_marginTop="153dp"
   
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusUp="@+id/app_item_skyplay"
        android:nextFocusDown="@+id/app_item_skyplay"        
        android:nextFocusRight="@+id/app_item_multiscreen"
        android:nextFocusLeft="@+id/app_item_dlna"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/view_miracast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/tv_pho" >

            <ImageView
                android:id="@+id/app_miracast_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/page_miracast" />

            
        </RelativeLayout>
          <RelativeLayout
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom ="@+id/view_miracast"
		             android:layout_alignLeft ="@+id/view_miracast"
		            android:background="@drawable/tv_bottom"  >
            
              <TextView
                android:id="@+id/app_miracast_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_miracast"
                android:textColor="@color/white"
                android:textSize="22sp" />
		     
	        </RelativeLayout>
	         <RelativeLayout
	          android:id="@+id/view_miracast_focus"
	          android:layout_width="343dp"
	          android:layout_height="230dp"
	          android:background="@drawable/focus"
	         />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/app_item_multiscreen"
		android:layout_width="343dp"
        android:layout_height="230dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="367dp"

        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:nextFocusUp="@+id/app_item_dlna"
        android:nextFocusDown="@+id/app_item_dlna"            
        android:nextFocusRight="@+id/app_item_skyplay"
        android:nextFocusLeft="@+id/app_item_miracast">

        <RelativeLayout
            android:id="@+id/view_multiscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/pho_tv" >

            <ImageView
                android:id="@+id/app_multiscreen_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/page_tvtomobile" />

           
        </RelativeLayout>
        <RelativeLayout
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom ="@+id/view_multiscreen"
		            android:layout_alignLeft ="@+id/view_multiscreen"
		            android:background="@drawable/pho_bottom"  >
            
             <TextView
                android:id="@+id/app_multiscreen_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_multiscreen"
                android:textColor="@color/white"
                android:textSize="22sp" />
            
             
		     
	        </RelativeLayout>
	         <RelativeLayout
	          android:id="@+id/view_multiscreen_focus"
	          android:layout_width="343dp"
	          android:layout_height="230dp"
	          android:background="@drawable/focus"
	         />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/app_item_skyplay"
        android:layout_width="343dp"
        android:layout_height="230dp"
        android:layout_marginLeft="646dip"
        android:layout_marginTop="366dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusUp="@+id/app_item_miracast"
        android:nextFocusDown="@+id/app_item_miracast"          
        android:nextFocusLeft="@+id/app_item_multiscreen"
        android:nextFocusRight="@+id/app_item_dlna"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/view_skyplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/appl_tv" >

            <ImageView
                android:id="@+id/app_skyplay_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/page_skyplay" />

        </RelativeLayout>
        <RelativeLayout
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom ="@+id/view_skyplay"
		            android:layout_alignLeft ="@+id/view_skyplay"
		            android:background="@drawable/appl_bottom"  >    
            <TextView
                android:id="@+id/app_skyplay_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_skyplay"
                android:textColor="@color/white"
                android:textSize="22sp" />
	        </RelativeLayout>
	        <RelativeLayout
	          android:id="@+id/view_skyplay_focus"
	          android:layout_width="343dp"
	          android:layout_height="230dp"
	          android:background="@drawable/focus"
	         />
    </RelativeLayout>

 
       <RelativeLayout
        android:id="@+id/focuse_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dip">
        
	    <ImageView
		   android:id="@+id/focuse_img"
	       android:background="@drawable/focus"
		   android:layout_width="0dip"
		   android:layout_height="0dip"
		   android:visibility="invisible"/>
		    
	</RelativeLayout>
</RelativeLayout>
