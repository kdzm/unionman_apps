<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chanbar_id"
    android:layout_width="962dp"
    android:layout_height="115dp"
    android:background="@drawable/showprogrambg_2"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewChanBarProgNum"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textViewChanBarProgName"
            android:layout_width="202dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="115dp"
            android:layout_marginLeft="42dip"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:visibility="visible" >

	            <TextView
                    android:id="@+id/chanbar_cur_prog"
                    android:layout_width="126dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/chanbar_text_p_name"
                    android:layout_width="474dp"
                    android:layout_height="38dp"
                    android:gravity="left|center"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/chanbar_text_p_start_time"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/textViewChanBarProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="400dip"
                    android:layout_height="4dip"
                    android:layout_gravity="center"
                    android:background="@drawable/progress"
                    android:max="100"
                    android:progress="50" >
                </ProgressBar>

                <TextView
                    android:id="@+id/chanbar_txt_p_end_time"
                    android:layout_width="90dip"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dip"
                    android:gravity="left|center"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/chanbar_text_f_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/chanbar_txt_f_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/chanbar_next_prog"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/chanbar_text_f_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>