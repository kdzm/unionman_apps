<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/searchmenu_btn"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/tf_negative_authorization_info"
                android:textColor="@color/white"
                android:textSize="30sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchmenu_btn" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="@string/tf_index"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="@string/tf_status"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:text="@string/tf_verify_value"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>
        </LinearLayout>

        <ListView
            android:id="@+id/tf_detitle_listView"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border"
            android:cacheColorHint="#00000000" 
            android:scrollbarStyle="outsideInset"                      
            android:listSelector="@drawable/searchmenu_btn" >
        </ListView>
    </LinearLayout>
 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >


    </LinearLayout>
</LinearLayout>