<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="546dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg2"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/search_process_title"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:gravity="center"
        android:text="@string/search_prog"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/search_sort_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp" >

        <TextView
            android:id="@+id/search_tv_text"
            android:layout_width="350dp"
            android:layout_height="46dp"
            android:layout_marginLeft="35dp"
            
            android:gravity="center"
            android:text="@string/tv"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/search_radio_text"
            android:layout_width="350dp"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            
            android:gravity="center"
            android:text="@string/radio"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="230dp"

        android:orientation="horizontal"
        android:weightSum="1" >

        <ListView
            android:id="@+id/tv_listView"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"

            >

        </ListView>

        <ListView
            android:id="@+id/radio_listView"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            
            android:scrollbarAlwaysDrawVerticalTrack="true" >

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="150dp"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="@string/signal_qingdu"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp" >
            </TextView>

			<TextView
			    android:id="@+id/textView4"
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_vertical"
			    android:layout_marginTop="2dp"
			    android:background="#46a1a1a1" />

            <ProgressBar
                android:id="@+id/search_signalbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_green" >

            </ProgressBar>

            <TextView
                android:id="@+id/signal_textView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

        </LinearLayout>

   <TextView
       android:id="@+id/textView2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_gravity="center_vertical"
       android:layout_marginLeft="2dp"
       android:layout_marginRight="2dp"
       android:background="#46a1a1a1" />
   
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="150dp"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="@string/search_jingdu"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp" >
            </TextView>

			<TextView
			    android:id="@+id/textView5"
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_vertical"
			    android:layout_marginBottom="2dp"
			    android:background="#46a1a1a1" />

            <ProgressBar
                android:id="@+id/search_progress_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_pink" >

            </ProgressBar>

            <TextView
                android:id="@+id/progress_textView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/search_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_status"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/search_status_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>