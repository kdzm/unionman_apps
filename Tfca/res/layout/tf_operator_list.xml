<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="@dimen/tf_smc_info_width"
        android:layout_height="@dimen/tf_smc_info_height"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tf_smc_info_title_height"
        android:layout_gravity="center"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tf_operator_info"
            android:textColor="@color/white"
            android:textSize="@dimen/tf_smc_info_title_text_size" >
        </TextView>
    </LinearLayout>
    
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="@dimen/tf_smc_info_title_height" android:layout_marginTop="45dp" android:background="@drawable/searchmenu_btn">

        <TextView
            android:id="@+id/operator_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tf_smc_info_title_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tf_operator_title_margin"
            android:gravity="center"
            android:text="@string/tf_operator_id"
            android:textColor="@color/white"
            android:textSize="@dimen/tf_smc_info_item_title_text_size" >
</TextView>
        <TextView android:id="@+id/operator_name" android:text="@string/tf_operator_name" android:layout_height="@dimen/tf_smc_info_title_height" android:layout_marginLeft="@dimen/tf_operator_title_margin" android:gravity="center" android:layout_gravity="center" android:layout_width="200dp" android:textSize="24sp" android:textColor="@color/white"></TextView>
    </LinearLayout>
        <ListView
        android:id="@+id/operator_list"
        android:layout_width="@dimen/tf_operator_content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/searchmenu_btn"
        android:scrollbars="vertical" >

        </ListView> 
</LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >


    </LinearLayout>
</LinearLayout>