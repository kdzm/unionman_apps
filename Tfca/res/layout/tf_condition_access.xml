<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="@dimen/tf_smc_main_width"
        android:layout_height="@dimen/tf_smc_main_height"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_main_title_height"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/tf_condition_access"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_main_title_text_size" >
            </TextView>
			<ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/dvb_title_line"
            	/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:clickable="true"
            android:gravity="center|top"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tf_smc_main_item_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/searchmenu_btn"
                android:text="@string/tf_smc_status_info"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_main_item_text_size"
                android:nextFocusUp="@+id/button9">

               <requestFocus />
            </Button>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#46a1a1a1"
                android:textColor="@color/white" >
            </TextView>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tf_smc_main_item_height"
                android:background="@drawable/searchmenu_btn"
                android:text="@string/tf_change_pin"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_main_item_text_size" >
