                android:layout_marginLeft="2dp"
                android:background="#46a1a1a1" >
            </TextView>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tf_smc_main_item_height"
                android:background="@drawable/searchmenu_btn"
                android:text="@string/tf_working_time"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_main_item_text_size" >
            </Button>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#46a1a1a1" >
            </TextView>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tf_smc_main_item_height"
                android:background="@drawable/searchmenu_btn"
                android:text="@string/tf_pair_info"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_main_item_text_size" >
            </Button>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#46a1a1a1" >
            </TextView>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tf_smc_main_item_height"
                android:background="@drawable/searchmenu_btn"
                android:text="@string/tf_operator_info"
                android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_main_item_text_size" >
            </Button>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#46a1a1a1" >
            </TextView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
