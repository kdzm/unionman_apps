<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dvb_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="@dimen/tf_smc_info_width"
        android:layout_height="@dimen/tf_smc_info_height"
        android:layout_gravity="center"
        android:background="@drawable/menu_bg1"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_title_height"
        android:layout_gravity="top"
        android:background="@drawable/searchmenu_btn"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tf_smc_status_info"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_title_text_size" >
        </TextView>
    </LinearLayout>
	
	<LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_item_height"
        android:layout_marginTop="40dp"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView9"
                android:layout_width="@dimen/tf_smc_info_item_title_width"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:gravity="right"
            android:text="@string/tf_smc_num"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_item_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
                android:layout_width="@dimen/tf_smc_info_item_title_width"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:gravity="right"
            android:text="@string/tf_cas_version"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >

        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
           
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_item_height"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
                android:layout_width="@dimen/tf_smc_info_item_title_width"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:gravity="right"
            android:text="@string/tf_working_time_str"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>
    </LinearLayout>

    

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_item_height"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
                android:layout_width="@dimen/tf_smc_info_item_title_width"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:gravity="right"
            android:text="@string/tf_watch_level_str"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" />
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_item_height"
        android:background="@drawable/searchmenu_btn"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView20"
                android:layout_width="@dimen/tf_smc_info_item_title_width"
            android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:gravity="right"
            android:text="@string/tf_area_code"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>

        <TextView
            android:id="@+id/tv_area_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
            android:layout_height="@dimen/tf_smc_info_item_height"
        android:background="@drawable/searchmenu_btn"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
                android:layout_width="@dimen/tf_smc_info_item_title_width_big"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:gravity="right"
            android:text="@string/tf_pair_status"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tf_smc_info_item_margin_left"
            android:textColor="@color/white"
                android:textSize="@dimen/tf_smc_info_item_title_text_size" >
        </TextView>
    </LinearLayout>
    
</LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >


    </LinearLayout>
</LinearLayout>