<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/FrameLayoutSelect" android:layout_alignParentBottom="true"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="@drawable/media_center_bg"
	>

    <LinearLayout
        android:id="@+id/txt_TitleLayout"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="110dp"
		android:layout_marginTop="50dp"
		android:orientation="horizontal"
		>
		
        <ImageView
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/btn_camera_arrow_left_default"
	        />
        
		<TextView
		    android:id="@+id/app_txt_Title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:text="@string/app_title"
			android:textColor="@color/white"
			android:textSize="35sp"
			/>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/Music_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txt_TitleLayout"
		android:layout_marginTop="50dp"
		android:layout_toLeftOf="@+id/Video_item_icon"
		android:layout_marginRight="20dp"
		android:background="@drawable/focus"
		android:clickable="true"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:nextFocusLeft="@+id/Picture_item_icon"
		android:nextFocusRight="@+id/Video_item_icon"
		>

		<RelativeLayout
		    android:id="@+id/Music_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/music_bg" >
			
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="62dp"
				android:layout_centerHorizontal="true"
				android:background="@drawable/music_center"
		        />

			
		</RelativeLayout>
		<RelativeLayout
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom ="@+id/Music_back"
		            android:background="@drawable/mus_bottom"  >
			    
			    <TextView
					android:id="@+id/app_txt_Music"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="@string/music"
					android:textColor="@color/white"
					android:textSize="30sp"
					/>
	   
	        </RelativeLayout>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/Video_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/Music_item_icon"
		android:layout_centerHorizontal="true"
		android:background="@drawable/focus"
		android:clickable="true"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:nextFocusLeft="@+id/Music_item_icon"
		android:nextFocusRight="@+id/Picture_item_icon"
		>
		
		<RelativeLayout
		    android:id="@+id/Video_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/video_bg"
			>
			
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="62dp"
				android:layout_centerHorizontal="true"
				android:background="@drawable/video_center"
		        />
		    
			
		</RelativeLayout>
		<RelativeLayout
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom ="@+id/Video_back"
	            android:background="@drawable/vid_bottom"  >
		    <TextView
				android:id="@+id/app_txt_Video"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="@string/video"
				android:textColor="@color/white"
				android:textSize="30sp"
				/>
   
        </RelativeLayout>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/Picture_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/Video_item_icon"
		android:layout_alignTop="@+id/Video_item_icon"
		android:layout_marginLeft="20dp"
		android:background="@drawable/focus"
		android:clickable="true"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:nextFocusLeft="@+id/Video_item_icon"
		android:nextFocusRight="@+id/Music_item_icon"
		>
	
		<RelativeLayout
		    android:id="@+id/picture_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/picture_bg"
			>
		
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="62dp"
				android:layout_centerHorizontal="true"
				android:background="@drawable/picture_center"
		        />
		    
			
		</RelativeLayout>
		<RelativeLayout
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom ="@+id/picture_back"
	            android:background="@drawable/pic_bottom"  >
		    <TextView
				android:id="@+id/app_txt2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:text="@string/image"
				android:textColor="@color/white"
				android:textSize="30sp"
				/>
   
        </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>