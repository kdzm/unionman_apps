       </style>
       <!-- navigation button  -->
       <style name="styleNavigationButton">
               <item name="android:layout_width">170px</item>
               <item name="android:layout_height">40px</item>
               <item name="android:layout_gravity">center_vertical</item>
               <item name="android:textColor">@color/azure</item>
               <item name="android:textSize">20sp</item>
               <item name="android:clickable">false</item>
               <item name="android:background">@drawable/item_background_selector</item>
       </style>
       <style name="styleWrapWrap">
               <item name="android:layout_width">wrap_content</item>
               <item name="android:layout_height">wrap_content</item>
       </style>
       <style name="styleMatchWrap">
			   <item name="android:layout_width">match_parent</item>
               <item name="android:layout_height">wrap_content</item>
       </style>
